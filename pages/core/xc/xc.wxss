.container{
  background: #f7f7f7;
}

/* 顶部导航  */
.xc{
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border-bottom:1px #e5e5e5 solid; */
}
.xc picker{
  display: flex;
  font-size: 40rpx;
  color: #666;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}
.xc .picker{
  display: flex;
  align-items: center;
  justify-content: center;
}
.xc .btn-change{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-left:10rpx;
}
.xc .btn-change-img{
  width: 40rpx;
  height: 40rpx;
}
.navTab{
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 35rpx;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
}
.navTab view{
  flex: 1;
  text-align: center;
  /* color: #333; */
  /* background: #D2D3D5; */
  font-size: 26rpx;
  
}
.navTab .selected{
  /*background: #73b4ef;*/
  color: #73b4ef;
  border-bottom: 6rpx solid #73b4ef;
  font-weight: bold;
}
.time-list{
  display: flex;
  flex-direction:column;
  align-items: center;
  position: relative;
  
}
.time-item{
  flex: 1;
  width: 100%;
  background:#fff;
  padding: 30rpx;
  padding-left:100rpx;
  border-bottom: 2rpx solid #eee;
  overflow: hidden;
  margin-bottom:20rpx;
}
.time-title{
  font-weight: 400;
  font-size:40rpx;
  display: block;
  width: 100%;
  margin-bottom:20rpx;
}
.time-title span{
  color:red;
  font-size:45rpx;
}
.time-info{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content:space-around;
}
.time-start{
  display: flex;
  flex:1;
  color: #999;
  font-size:30rpx;
  line-height: 1.2;
  width: 100%;
}
.time-end{
  display: flex;
  flex:1;
  color: #999;
  font-size:30rpx;
  line-height: 1.2;
  width: 100%;
}
.time-icon{
  width: 30rpx;
  height: 30rpx;
}
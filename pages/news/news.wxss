  display: block;
  font-size: 28rpx;
}

.article__source{
  color:#d81e06;
  border:1rpx solid #d81e06;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}


.article__time{
  margin-right: 10rpx;
}
.article__count{
  float: right;
  display: flex;
  align-items: center;
  color:#333;
  font-size: 26rpx;
}

.article__icon{
  width: 29rpx;
  height: 29rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}

.article__imgview{
  width: 200rpx;

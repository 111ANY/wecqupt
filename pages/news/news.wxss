.list-main{
  display: flex;
  display: -webkit-box;
  display: box;
  -webkit-box-align: center;
  box-align: center;
  padding-bottom: 3px;
  padding-top: 5.5px;
}
.list-item.all{
  background-color: #73b4ef;
}
.list-item.yiban{
  background-color: #fff;
}
.list-item.portal{
  background-color: #0167b8;
}
.list-item.xfjy{
  background-color: #e6212b;
}
.list-item.jstz{
  background-color: #e78ab0;
}
.list-item.news{
  background-color: #0a5cad;
}
.list-item-left{
  overflow: hidden;
  padding-right: 10rpx;
  width: 66.66%;
  flex: 2;
  box-sizing: border-box;
}
.list-item-title{
  display: block;
  text-overflow: ellipsis;
  font-size: 0.9rem;
  line-height: 1.2rem;
  color: #333;
  height: 2.4rem;
  overflow: hidden;
}
.list-item-info{
  text-align: left;
  line-height: 17rpx;
  height: 17rpx;
  font-size: 12px;
  color: #b8bac0;
  font-weight: 400;
}
.list-item-icon{
  flex: 0 0 60rpx;
  height: 60rpx;
  width: 60rpx;
  border-left: 1px solid #fff;
  padding-left: 25rpx;
}

/*仿新闻客户端*/
.header{
    width: 100%;
    background-color: #fff;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    height: 64rpx;
    position: relative;
}
.articles{
  background-color: #fff;
}
.article__item{
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
  padding-bottom: 40rpx;
}
.article__thumb{
  width:4.2rem;
  height: 3rem;
  margin-right: 0.6rem;
}
.article__image{
  width:4.2rem;
  height: 3rem;
}
.article__info{
  flex: 1;
  width: 100%;
  overflow: hidden;
}
.article__title{
  font-weight: 400;
  font-size: 32rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
}

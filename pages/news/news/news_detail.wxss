  width: 580rpx;
  height: 940rpx;
  position: fixed;
  top: 50rpx;
  left: 0;
  z-index: 9999;
  margin: 0rpx 85rpx;
  /* background-color: #fff; */
  display: flex;
  flex-direction: column;
  align-items: center;
}

